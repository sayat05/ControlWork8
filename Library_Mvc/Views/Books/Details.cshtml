@model Library_Mvc.Models.DtoModels.BookDetailDto

<h2>@Model.Name</h2>
<img src="@Model.RefImg" alt="@Model.Name" style="width:300px;height:400px;" />
<p><strong>Автор:</strong> @Model.Author</p>
<p><strong>Категория:</strong> @Model.CategoryName</p>
<p><strong>Описание:</strong> @Model.Description</p>
<p><strong>Дата создания:</strong> @Model.CreateDate.ToShortDateString()</p>
<p><strong>Дата добавления:</strong> @Model.DateAdded.ToShortDateString()</p>
<p><strong>Статус:</strong> @Model.StatusStr</p>

<a asp-action="Index" asp-controller="Home">Назад</a>